.header-view {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.seat-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 40rpx;
}

.seat-view {
  display: flex;
  flex-direction: column;
  padding: 10rpx;
  align-items: center;
}

.seat-image {
  width: 128rpx;
  height: 128rpx;
}

.form-area {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.form-left{
  width: 50%;
  flex-direction: column;
  display: flex;
  margin:2px;
}

.form-right{
  width: 50%;
  flex-direction: column;
  display: flex;
  margin:2px;
}

.form-body{
  padding-top: 40rpx;
  width: 80%;
}

.button-sp-area{
  display: flex;
  flex-direction: row;
  width: 90%;
}

.left {
  width: 70%;
  flex-direction: column;
  display: flex;
  margin: 2px;
  padding: 5rpx;
}

.right {
  width: 30%;
  flex-direction: column;
  display: flex;
  margin: 2px;
  padding: 5rpx;
}

.poll-res{
  height: 100%;
  border: 1px solid #000000;
}

.seat-item{
  font-size: 20rpx;
  width: 128rpx
}

.role-text{
  border: 2px solid #000000
}

.toll-select{
  text-decoration: underline
}

.role-image{
  width: 200rpx;
  height: 200rpx;
}

.mini-button{
  padding-top: 10rpx;
}